import { useEffect, useState } from "react";
import { useParams, useNavigate } from "react-router-dom";
import { supabase } from "@/integrations/supabase/client";
import { ChevronLeft, Trophy, Anchor, MapPin } from "lucide-react";

const PublicProfile = () => {
  const { id } = useParams(); // Gets the ID from the URL /profile/:id
  const navigate = useNavigate();
  const [profile, setProfile] = useState<any>(null);
  const [stats, setStats] = useState({ totalPoints: 0, catchCount: 0 });

  useEffect(() => {
    const fetchPublicData = async () => {
      // 1. Fetch Profile
      const { data: profileData } = await supabase
        .from('profiles')
        .select('*')
        .eq('id', id)
        .single();
      
      // 2. Fetch their Catches/Stats
      const { data: catches } = await supabase
        .from('catches')
        .select('points')
        .eq('user_id', id);

      const total = catches?.reduce((sum, c) => sum + (c.points || 0), 0) || 0;

      setProfile(profileData);
      setStats({ totalPoints: total, catchCount: catches?.length || 0 });
    };

    if (id) fetchPublicData();
  }, [id]);

  if (!profile) return <div className="p-8 text-center uppercase font-black">Scanning Radar...</div>;

  return (
    <div className="pb-24 pt-4 px-4 max-w-md mx-auto space-y-6 animate-in fade-in">
      <button onClick={() => navigate(-1)} className="flex items-center gap-2 text-primary font-black uppercase italic text-xs">
        <ChevronLeft size={16} /> Back
      </button>

      <div className="flex flex-col items-center space-y-4">
        <div className="relative">
          <img 
            src={profile.avatar_url || "/placeholder.svg"} 
            className="h-32 w-32 rounded-[40px] object-cover border-4 border-primary/20 shadow-2xl" 
          />
        </div>
        
        <div className="text-center">
          <h1 className="text-3xl font-black italic uppercase tracking-tighter">{profile.display_name}</h1>
          <p className="text-primary font-black uppercase italic text-[10px] tracking-widest mt-1">
            {profile.equipped_title || "PRO CASTR"}
          </p>
        </div>
      </div>

      <div className="grid grid-cols-2 gap-4">
        <div className="bg-card p-6 rounded-[32px] text-center border border-white/5">
          <Trophy className="mx-auto mb-2 text-primary" size={20} />
          <p className="text-2xl font-black italic">{stats.totalPoints.toLocaleString()}</p>
          <p className="text-[8px] font-black uppercase opacity-40">Total Points</p>
        </div>
        <div className="bg-card p-6 rounded-[32px] text-center border border-white/5">
          <Anchor className="mx-auto mb-2 text-primary" size={20} />
          <p className="text-2xl font-black italic">{stats.catchCount}</p>
          <p className="text-[8px] font-black uppercase opacity-40">Catches</p>
        </div>
      </div>

      {/* READ ONLY INFO */}
      <div className="space-y-2">
        <div className="flex items-center gap-3 p-4 bg-muted/30 rounded-2xl">
          <MapPin size={16} className="text-primary" />
          <span className="font-black uppercase italic text-xs">{profile.region || "Unknown Waters"}</span>
        </div>
      </div>
    </div>
  );
};

export default PublicProfile;
